package templates

templ Experiments(experiments []Experiment) {
	@Layout("Experiments") {
		<div class="space-y-6" x-data="{ selected: [] }">
			<div class="page-header">
				<div class="page-header-content">
					<h1 class="page-title">Experiments</h1>
					<div class="page-header-actions">
						<a
							class="btn btn-primary"
							x-show="selected.length >= 2"
							x-cloak
							x-bind:href="'/experiments/compare?ids=' + selected.join(',')"
						>
							Compare (<span x-text="selected.length"></span>)
						</a>
					</div>
				</div>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
				for _, exp := range experiments {
					<div class="card hover:shadow-lg transition-shadow duration-200 flex flex-col">
						<!-- Header -->
						<div class="flex items-start gap-3">
							<input
								type="checkbox"
								class="mt-1 h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500 cursor-pointer"
								x-bind:value={ exp.ID }
								x-bind:checked={ "selected.includes('" + exp.ID + "')" }
								x-on:change={ "selected.includes('" + exp.ID + "') ? selected = selected.filter(id => id !== '" + exp.ID + "') : selected.push('" + exp.ID + "')" }
							/>
							<div class="flex-1 min-w-0">
								<div class="flex items-center gap-2 flex-wrap">
									<a href={ templ.SafeURL("/experiments/" + exp.ID) } class="text-lg font-semibold text-blue-600 hover:text-blue-800 hover:underline truncate">{ exp.Name }</a>
									if exp.IsActive {
										<span class="badge badge-green shrink-0">Active</span>
									} else if exp.EndedAt != "" {
										<span class="badge badge-gray shrink-0">Ended</span>
									} else {
										<span class="badge badge-yellow shrink-0">Inactive</span>
									}
								</div>
								if exp.Description != "" {
									<p class="text-gray-600 text-sm mt-1 line-clamp-2">{ exp.Description }</p>
								}
								if exp.Hypothesis != "" {
									<p class="text-gray-500 text-xs mt-2 italic line-clamp-2">"{ exp.Hypothesis }"</p>
								}
							</div>
						</div>

						<!-- Stats Grid -->
						<div class="mt-4 grid grid-cols-3 gap-3 pt-4 border-t border-gray-100 flex-1">
							<div class="text-center">
								<p class="text-xs text-gray-500 uppercase tracking-wide">Sessions</p>
								<p class="text-base font-semibold text-gray-900">{ formatInt(exp.SessionCount) }</p>
							</div>
							<div class="text-center">
								<p class="text-xs text-gray-500 uppercase tracking-wide">Tokens</p>
								<p class="text-base font-semibold text-gray-900">{ formatTokens(exp.TotalTokens) }</p>
							</div>
							<div class="text-center">
								<p class="text-xs text-gray-500 uppercase tracking-wide">Cost</p>
								<p class="text-base font-semibold text-gray-900">{ formatCost(exp.TotalCost) }</p>
							</div>
							<div class="text-center">
								<p class="text-xs text-gray-500 uppercase tracking-wide">Tok/Sess</p>
								<p class="text-base font-semibold text-gray-900">{ formatTokens(exp.TokensPerSess) }</p>
							</div>
							<div class="text-center">
								<p class="text-xs text-gray-500 uppercase tracking-wide">$/Sess</p>
								<p class="text-base font-semibold text-gray-900">{ formatCostPrecise(exp.CostPerSession) }</p>
							</div>
							<div class="text-center">
								<p class="text-xs text-gray-500 uppercase tracking-wide">Started</p>
								<p class="text-base font-semibold text-gray-900">{ formatDateShort(exp.StartedAt) }</p>
							</div>
						</div>

						<!-- Actions -->
						<div class="mt-4 pt-4 border-t border-gray-100 flex items-center justify-between">
							<div class="text-xs text-gray-400">
								if exp.EndedAt != "" {
									Ended { formatDateShort(exp.EndedAt) }
								} else {
									&nbsp;
								}
							</div>
							<div class="flex gap-2">
								if !exp.IsActive && exp.EndedAt == "" {
									<button
										class="btn btn-sm btn-primary"
										hx-post={ "/api/experiments/" + exp.ID + "/activate" }
										hx-swap="none"
										title="Activate experiment"
									>Activate</button>
								}
								if exp.IsActive {
									<button
										class="btn btn-sm btn-secondary"
										hx-post={ "/api/experiments/" + exp.ID + "/deactivate" }
										hx-swap="none"
										title="Deactivate experiment"
									>Pause</button>
								}
								<button
									class="btn btn-sm btn-ghost text-red-600 hover:bg-red-50"
									hx-delete={ "/api/experiments/" + exp.ID }
									hx-confirm="Are you sure you want to delete this experiment?"
									hx-swap="none"
									title="Delete experiment"
								>
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
									</svg>
								</button>
							</div>
						</div>
					</div>
				}
				if len(experiments) == 0 {
					<div class="col-span-full card text-center py-12">
						<svg class="w-12 h-12 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
						</svg>
						<p class="text-gray-500 font-medium">No experiments yet</p>
						<p class="text-sm text-gray-400 mt-1">Create one with: <code class="bg-gray-100 px-2 py-0.5 rounded">mclaude experiment create "name"</code></p>
					</div>
				}
			</div>
		</div>
	}
}
